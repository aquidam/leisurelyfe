<!-- Container for the show section -->
<div class="show-container">
  <%= image_tag(@recommendation.image_url, class: "show-image") %>
  <div class="show-text">
    <span class="label-recommendation label-<%= @recommendation.category %>"><%= @recommendation.category.humanize %></span>
    <h3 class="image-text"><%= @recommendation.name %></h3>
  </div>
</div>

<!-- Container for navigation items -->
<div class="navigation-container">
  <div class="navigation-item">
    <%= link_to recommendations_path do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  </div>
  <div class="navigation-icons">
    <%= render "recommendations/share_and_like_buttons", recommendation: @recommendation %>
  </div>
</div>

<!-- Custom horizontal rule -->
<hr class="custom-hr">
<div class="container text-center details-container">
  <div class="row">
    <div class="col-6">
      <div class="row text-center">
        <div class="col">
          <i class="fa-solid fa-paw opacity-50"></i>
          <%= image_tag "Dog.jpg", height: 80, width: "100%", alt: "Logo", class: "dog-border" %>
        </div>
        <div class="col">
          <i class="fa-solid fa-child-reaching opacity-50"></i>
          <%= image_tag "Kid.jpg", height: 80, width: "100%", alt: "Logo", class: "kid-border" %>
        </div>
      </div>
      <hr class="custom-hr">
      <div class="row text-center">
        <div class="col">
          <i class="fa-regular fa-clock colored-text"></i>
          <p><%= @recommendation.start_time %></p>
        </div>
        <div class="col">
          <i class="fa-solid fa-clock colored-text"></i>
        </div>
      </div>
    </div>
    <div class="col-6">
      <h4 class="colored-text">About</h4>
      <p class="colored-text"><i class="fa-solid fa-feather colored-text"></i><%= @quote %></p>
    </div>
  </div>
</div>

<!-- Container for details section -->
<div class="container" style="width: 100%; height: 250px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<!-- Custom horizontal rule -->

<%# User the colored-text class for text-color  %>

<!-- Container for recommendation rows -->
<div class="recommendations-container">
  <h3 class="colored-text">Recommendations based on your likes</h3>
  <div class="recommendations-row">
    <% @recommendations.each do |recommendation| %>
      <div class="recommendation-col">
        <div class="recommendation-card">
          <%= image_tag(recommendation.image_url, class: "recommendation-image") %>
          <div class="recommendation-card-body">
            <h5 class="recommendation-card-title"><%= recommendation.name %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
