<!-- app/views/pages/_search_main.html.erb -->
<section class="landing-intro">
  <h1>Attractions, activities, and experiences</h1>
  <p>Discover attractions, activities, and experiences in Montreal that match your interests and style. Enjoy a weekend full of new adventures and memorable moments.</p>
</section>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

  .landing-intro {
    font-family: 'Roboto', sans-serif;
    text-align: center;
    padding: 40px 20px;
    background-color: #C8EAD0; /* Light grey background */
    color: #333; /* Dark grey text */
  }

  .landing-intro h1 {
    font-size: 2.5em; /* Adjust size as needed */
    font-weight: 700;
    margin-bottom: 20px;
    color: #2c3e50; /* Dark blue text for the heading */
  }

  .landing-intro p {
    font-size: 1.25em; /* Adjust size as needed */
    color: #7f8c8d; /* Lighter grey for the paragraph */
    max-width: 600px; /* Limit width for better readability */
    margin: 0 auto;
  }
</style>

<main data-controller="search-main">
  <section class="search">
    <div class="input-group guests-group">
      <i class="fas fa-user-friends"></i>
      <input type="number" class="input-guests" name="guests" value="0" min="0" data-search-main-target="inputGuests">
      <button class="button-minus" data-search-main-target="minusButton">-</button>
      <button class="button-plus" data-search-main-target="plusButton">+</button>
    </div>
    <%= form_with url: recommendations_path, method: :get, class: "form-with" do |f| %>
      <div class="input-group">
        <input type="hidden" name="guests" id="guests-count" value="0">
        <div class="checkbox-wrapper-61">
          <%= f.check_box :kid_friendly, class: 'check', id: 'check1-61' %>
          <label for="check1-61" class="label">
            <svg width="45" height="45" viewbox="0 0 95 95">
              <rect x="30" y="20" width="50" height="50" stroke="black" fill="none" />
              <g transform="translate(0,-952.36222)">
                <path d="m 56,963 c -102,122 6,9 7,9 17,-5 -66,69 -38,52 122,-77 -7,14 18,4 29,-11 45,-43 23,-4 " stroke="black" stroke-width="3" fill="none" class="path1" />
              </g>
            </svg>
            <span class="checkbox-label">Kids</span>
          </label>
        </div>
        <div class="checkbox-wrapper-61">
          <%= f.check_box :dog_friendly, class: 'check', id: 'check2-61' %>
          <label for="check2-61" class="label">
            <svg width="45" height="45" viewbox="0 0 95 95">
              <rect x="30" y="20" width="50" height="50" stroke="black" fill="none" />
              <g transform="translate(0,-952.36222)">
                <path d="m 56,963 c -102,122 6,9 7,9 17,-5 -66,69 -38,52 122,-77 -7,14 18,4 29,-11 45,-43 23,-4 " stroke="black" stroke-width="3" fill="none" class="path1" />
              </g>
            </svg>
            <span class="checkbox-label">with Dog?</span>
          </label>
        </div>
      </div>
     
      <div class="form-submit">
        <%= f.submit "Search", class: "search-button" %>
      </div>
    <% end %>
  </section>
</main>
