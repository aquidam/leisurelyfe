<section class="landing-intro">
  <h1>Attractions, activities, and experiences</h1>
  <p>Discover attractions, activities, and experiences in Montreal that match your interests and style. Enjoy a weekend full of new adventures and memorable moments.</p>
</section>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

  .landing-intro {
    font-family: 'Roboto', sans-serif;
    text-align: center;
    padding: 40px 20px;
    background-color: #C8EAD0; /* Light grey background */
    color: #333; /* Dark grey text */
  }

  .landing-intro h1 {
    font-size: 2.5em; /* Adjust size as needed */
    font-weight: 700;
    margin-bottom: 20px;
    color: #2c3e50; /* Dark blue text for the heading */
  }

  .landing-intro p {
    font-size: 1.25em; /* Adjust size as needed */
    color: #7f8c8d; /* Lighter grey for the paragraph */
    max-width: 600px; /* Limit width for better readability */
    margin: 0 auto;
  }
</style>


<main data-controller="search-icon search-main">
  <section class="search">
  <%# This is for the NUMBER OF GUESTS  %>
    <div class="input-group guests-group">
      <i class="fas fa-user-friends"></i>
      <input type="number" class="input-guests" name="guests" value="0" min="0" data-search-main-target="inputGuests">
      <button class="button-minus" data-action="click->search-main#decrementGuests" data-search-icon-target="minusButton">-</button>
      <button class="button-plus" data-action="click->search-main#incrementGuests" data-search-icon-target="plusButton">+</button>
    </div>
    <%= form_with url: recommendations_path, method: :get, class: "form-with" do |f| %>
      <div class="container-options">
        <input type="hidden" name="guests" id="guests-count" value="0">
        <div class="checkbox-wrapper-61">
          <%= f.check_box :kid_friendly, class: 'check', id: 'kid-friendly', data: { action: "change->search-icon#changeKidFriendlyColor", search_icon_target: "kidFriendlyCheckbox" } %>
          <label for="kid-friendly" class="label m-0">
            <i class="fa-solid fa-child-reaching search-icon" data-search-icon-target="kidFriendlyIcon"></i>
          </label>
        </div>
        <div class="checkbox-wrapper-61">
          <%= f.check_box :dog_friendly, class: 'check', id: 'dog-friendly', data: { action: "change->search-icon#changeDogFriendlyColor", search_icon_target: "dogFriendlyCheckbox" } %>
          <label for="dog-friendly" class="label m-0">
            <i class="fa-solid fa-dog search-icon" data-search-icon-target="dogFriendlyIcon"></i>
          </label>
        </div>
      </div>

      <div class="form-submit">
        <%= f.submit "Search", class: "search-button" %>
      </div>
    <% end %>
  </section>
</main>
